html 
    head
        include partials/head.pug
    body 
       .container-sm
            h1 Ingrese un producto
            form(role="form" method="post" action="api/productos/guardar")
                .mb-5
                    label.form-label(for="title") Title
                    input.form-control(type="text" name="title")  
                .mb-5
                    label.form-label(for="price") Price
                    input.form-control(type="text" name="price") 
                .mb-5 
                    label.form-label(from="thumbail") Thumbail 
                    input.form-control(type="text" name="thumbail")
                .mb-5 
                    input.btn.btn-primary(type="submit" value="Enviar")